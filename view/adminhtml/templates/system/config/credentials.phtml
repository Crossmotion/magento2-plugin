/**
 * @var $block \Paynl\Payment\Block\Adminhtml\Render\Credentials
 */

$status = $block->checkCredentials();

?>

<?php if ($status['status'] == 1) : ?>
    <span class="value" style="color:#438600; font-weight: bold"><?= __('Pay. Successfully connected.') ?> </span>
<?php elseif (!empty($status['error'])) : ?>
    <span class="value" style="color:#dd4242; font-weight: bold"><?= __('Pay. Connection failed.') ?> (<?= $status['error'] ?>) </span>
<?php else : ?>
    <span class="value" style="color:#dd7536; font-weight: bold"><?= __('Pay. Not connected.') ?> </span>
<?php endif; ?>